@model IEnumerable<WebSalesMvc.Models.Seller>
@{
    ViewData["Title"] = "Index";
}

<h1>Sellers</h1>

<p>
    <a asp-action="Create" class="btn btn-light">Novo</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-gradient">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="badge badge-pill badge-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="badge badge-pill badge-success">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="badge badge-pill badge-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>